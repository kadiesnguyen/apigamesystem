# ===========================================
# JILI GAMES - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production

# ===========================================
# POSTGRESQL DATABASE
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=jili_game
POSTGRES_PORT=5432

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# ===========================================
# MONGODB (Logs)
# ===========================================
MONGO_USER=mongo
MONGO_PASSWORD=mongo123
MONGO_DB=jili_logs
MONGO_PORT=27017

# ===========================================
# SERVICE PORTS
# ===========================================
# Game Server
GAMESERVER_HTTP_PORT=3000
GAMESERVER_WS_PORT=3001

# CMS API
API_PORT=3300

# CMS Frontend
CMS_PORT=80

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# OPTIONAL: External URLs (if needed)
# ===========================================
# GAMESERVER_URL=http://localhost:3000
# API_URL=http://localhost:3300
# CMS_URL=http://localhost:80